<br>

<%=form_for(@usuario) do |f| %>
<% @usuario.errors.full_messages.each do |error| %>
    <div style="background:#17a2b8"><%=error%></div>
<%end%>
  <div class="form-group">
    <label for="exampleInputPassword1">Nombre: </label>
    <%= f.text_field :nombre, placeholder: "Nombre" , class: "form-control"%>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">email: </label>
 <%= f.text_field :email, placeholder: "Email" , class: "form-control"%>  </div>
  
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
 <%= f.password_field :password, placeholder: "Password" , class: "form-control"%>  </div>
 <%= f.submit "Registrar", class: "btn btn-info" %>
<%end%>
