

<br><br><div class="container">
  <fieldset>
      <Legend>
          <div class="title">
              <h1>Usuarios</h1>
          </div>
          <div class="float-right">
              <!--<button class="btn btn-primary" disabled data-toggle="modal" data-target="#exampleModal">Nuevo</button>-->
              <%= link_to "Registrar Nuevo", new_usuario_path	, class: "btn btn-info float-right" %>
            </div>
      </Legend>
      <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Nombre</th>
                <th scope="col">email</th>
                <th scope="col">password</th>
                <th scope="col">&#32;</th>
              </tr>
            </thead>
            <tbody>
              <%@users.each do |usuario| %>
                <tr>
                  <th scope="row"><%= usuario.id %></th>
                  <td><%= link_to usuario.nombre, usuario, class: "redirect"%></td>
                  <td><%= usuario.email %></td>
                  <td><%= usuario.password %></td>
                  <td><%= link_to "Eliminar", usuario, method: :delete , class: "btn btn-danger" %>
                    <%= link_to "Editar", edit_usuario_path(usuario), class: "btn btn-warning" %>
                  </td>
                </tr>
              <%end%>
              </tbody>
              <tfoot>
                <tr>
                  <th scope="col">id</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">email</th>
                  <th scope="col">password</th>
                  <th scope="col">&#32;</th>
                </tr>
              </tfoot>
          </table>
      </div>
  </fieldset>
  <div class="footer">
      <button>Traer Archivo de excel</button>
  </div>
</div>



<style>
.redirect{
  color:black;
  text-decoration:none;
  cursor:pointer;
}

.redirect:hover{
  color:white;
  text-decoration:none;
}
</style>