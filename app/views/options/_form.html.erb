<br>
<%=form_for(@option) do |o|%>
  <% @option.errors.full_messages.each do |error| %>
      <div style="background:#17a2b8"><%=error%></div>
    <%end%>
 <div class="row">
  <div class="form-group col-lg-6">
    <label for="nombre">Nombre: </label>
    <%= o.text_field :nombre, placeholder: "Nombre" , class: "form-control"%>
  </div>
  <div class="form-group col-lg-6">
    <label for="direccion">Direccion: </label>
    <%= o.text_field :direccion , class: "form-control"%>
  </div>
  <div class="form-group col-lg-6">
    <label for="orden">Orden: </label>
    <%= o.text_field :orden, class: "form-control"%>
  </div>
  <div class="form-group col-lg-6">
    <label for="estado">Estado:</label>
    <%= o.text_field :estado, value: "A", class: "form-control" %>
  </div><br>
 </div>
    <%= o.submit "Registrar", class: "btn btn-info float-right" %>
<%end%>