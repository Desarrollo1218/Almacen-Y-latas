<br>
<%=form_for(@mercancia, url:{action:"create"}) do |o|%>
  <% @mercancia.errors.full_messages.each do |error| %>
      <div style="background:#17a2b8"><%=error%></div>
    <%end%>
 <div class="row">
  <div class="form-group col-lg-6">
    <label for="nombre">Codigo: </label>
    <%= o.text_field :codigo, placeholder: "0000" , class: "form-control"%>
  </div>
  <div class="form-group col-lg-6">
    <label for="direccion">Proveedor: </label>
    <%= o.text_field :proveedor , class: "form-control"%>
  </div>
  <div class="form-group col-lg-6">
    <label for="orden">Fecha: </label>
    <%= o.date_field :fecha, class: "form-control"%>
  </div>
  <div class="form-group col-lg-6">
    <label for="estado">Total:</label>
    <%= o.text_field :total, value: "0", class: "form-control" %>
  </div><br>
 </div>
    <%= o.submit "Guardar", class: "btn btn-info float-right" %>
<%end%>